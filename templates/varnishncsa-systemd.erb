[Unit]
Description=Varnish HTTP accelerator NCSA daemon
After=varnish.service

[Service]
Type=forking
PIDFile=/run/varnishncsa.pid
ExecStart=/usr/bin/varnishncsa -a -w /var/log/varnish/varnishncsa.log -D -P /run/varnishncsa.pid <% if @varnishncsa_daemon_opts -%><%= @varnishncsa_daemon_opts -%><% end -%>

[Install]
WantedBy=multi-user.target

